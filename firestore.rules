rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regla para la colección "users"
    match /users/{userId} {
      // Permisos para leer o escribir un DOCUMENTO ESPECÍFICO
      allow read: if request.auth.uid == userId || request.auth.token.role == 'admin';
      allow write: if request.auth.token.role == 'admin';
    }

    // ¡NUEVA REGLA!
    // Permiso para leer la LISTA COMPLETA de la colección
    match /users {
        allow list: if request.auth.token.role == 'admin';
    }
  }
}